{
    "name": "@media-share/server",
    "version": "0.0.0",
    "private": true,
    "license": "ISC",
    "description": "media-share server",
    "keywords": [
        "media-share",
        "server"
    ],
    "author": "vallyian@gmail.com",
    "repository": {
        "type": "git",
        "url": "https://github.com/vallyian/media-share.git"
    },
    "engines": {
        "node": ">=16 <17",
        "npm": ">=8 <9"
    },
    "type": "module",
    "scripts": {
        "ci": "node -e \"fs.existsSync('node_modules') || child_process.execSync('npm ci', {stdio:'inherit'})\"",
        "prelint": "npm run ci",
        "lint": "eslint src/**",
        "prebuild": "npm run ci",
        "build": "esbuild src/index.ts --bundle --external:ffprobe-static --minify --platform=node --target=node16 --outfile=bin.cjs",
        "pretest": "node -e \"fs.rmSync('test-results', { recursive: true, force: true })\" && npm run ci",
        "test": "node -e \"require('esbuild-register/dist/node').register(); require('./test.ts')\"",
        "prestart": "npm run build -- --sourcemap",
        "start": "node -e \"process.env.NODE_ENV='development'; process.env.PORT=58081; child_process.execSync('node bin.cjs', {stdio:'inherit'})\""
    },
    "dependencies": {
        "ffprobe-static": "^3.1.0"
    },
    "devDependencies": {
        "@types/express": "^4.17.13",
        "@types/ffprobe": "^1.1.3",
        "@types/ffprobe-static": "^2.0.1",
        "@types/jasmine": "^4.0.3",
        "@types/node": "^16.11.45",
        "@typescript-eslint/eslint-plugin": "^5.31.0",
        "@typescript-eslint/parser": "^5.31.0",
        "esbuild": "^0.14.50",
        "esbuild-register": "^3.3.3",
        "eslint": "^8.20.0",
        "express": "^4.18.1",
        "ffprobe": "^1.1.2",
        "helmet": "^5.1.1",
        "jasmine": "^4.3.0",
        "jasmine-reporters": "^2.5.0",
        "jasmine-spec-reporter": "^7.0.0",
        "jschardet": "^3.0.0"
    }
}
