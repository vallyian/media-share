{
    "name": "@media-share/server",
    "version": "0.0.0",
    "private": true,
    "license": "ISC",
    "description": "media-share server",
    "keywords": [
        "media-share",
        "server"
    ],
    "author": "vallyian@gmail.com",
    "repository": {
        "type": "git",
        "url": "https://github.com/vallyian/media-share.git"
    },
    "engines": {
        "node": ">=16 <17",
        "npm": ">=8 <9"
    },
    "type": "commonjs",
    "scripts": {
        "ci": "node -e \"fs.existsSync('node_modules') || child_process.execSync('npm ci', {stdio:'inherit'})\"",
        "prelint": "npm run ci",
        "lint": "tsc --noEmit --project tsconfig.app.json && eslint src/**",
        "prebuild": "node -e \"fs.rmSync('bin', { recursive: true, force: true })\" && npm run ci",
        "build": "tsc --noEmitOnError --listEmittedFIles --project tsconfig.app.json",
        "postbuild": "node -e \"fs.cpSync('src/views', 'bin/views', { recursive: true, force: true })\"",
        "pretest": "node -e \"fs.rmSync('test-results', { recursive: true, force: true })\" && npm run ci",
        "test": "ts-node --project tsconfig.spec.json test.ts",
        "prestart": "npm run prebuild",
        "start": "node -e \"process.env.NODE_ENV='development'; process.env.PORT=58081; child_process.execSync('ts-node-dev --prefer-ts --clear --debug --inspect --watch -- src', {stdio:'inherit'})\""
    },
    "dependencies": {
        "cookie-parser": "^1.4.6",
        "ejs": "^3.1.8",
        "express": "^4.18.1",
        "ffmpeg-static": "^5.0.2",
        "helmet": "^5.1.1",
        "jschardet": "^3.0.0",
        "tslib": "^2.4.0"
    },
    "devDependencies": {
        "@types/cookie-parser": "^1.4.3",
        "@types/ejs": "^3.1.1",
        "@types/express": "^4.17.13",
        "@types/ffmpeg-static": "^3.0.1",
        "@types/jasmine": "^4.0.3",
        "@types/node": "^16.11.45",
        "@typescript-eslint/eslint-plugin": "^5.31.0",
        "@typescript-eslint/parser": "^5.31.0",
        "eslint": "^8.20.0",
        "jasmine": "^4.3.0",
        "jasmine-reporters": "^2.5.0",
        "jasmine-spec-reporter": "^7.0.0",
        "ts-node-dev": "^2.0.0",
        "typescript": "^4.7.4"
    }
}
